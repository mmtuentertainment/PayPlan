{
  "name": "payplan",
  "version": "0.1.2",
  "description": "PayPlan - BNPL Payment Manager with Business-Day Awareness",
  "main": "index.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:frontend": "cd frontend && npm test",
    "test:all": "npm test && npm run test:frontend",
    "vercel-build": "cd frontend && npm install && npm run build",
    "spec:path": "node -e \"const fs=require('fs');const c=['openapi.yaml','openapi.yml','api/openapi.yaml','api/openapi.yml'].find(p=>fs.existsSync(p));console.log(c?('OpenAPI spec: '+c):'No OpenAPI spec found; skipping')\"",
    "lint:api-drift": "node scripts/check-api-drift.mjs"
  },
  "keywords": [
    "payment",
    "planning",
    "finance",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ics": "^3.7.2",
    "luxon": "^3.4.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "jest": "^29.6.4",
    "jsdom": "^27.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
